<header class="relative overflow-hidden w-full">
  <div class="flex w-full justify-end items-center p-4 gap-2 lg:gap-4 text-accent">
    <div id="audio-toggle" class="cursor-pointer fixed top-6 right-6 z-50 p-3 rounded-full bg-secondary text-primary shadow-xl transition-all duration-300 backdrop-blur-xl flex items-center gap-2">
      <svg id="play-button" class="cursor-pointer" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4.702a.705.705 0 0 0-1.203-.498L6.413 7.587A1.4 1.4 0 0 1 5.416 8H3a1 1 0 0 0-1 1v6a1 1 0 0 0 1 1h2.416a1.4 1.4 0 0 1 .997.413l3.383 3.384A.705.705 0 0 0 11 19.298z"></path><line x1="22" x2="16" y1="9" y2="15"></line><line x1="16" x2="22" y1="9" y2="15"></line></svg>
      <svg id="pause-button" class="hidden cursor-pointer" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4.702a.705.705 0 0 0-1.203-.498L6.413 7.587A1.4 1.4 0 0 1 5.416 8H3a1 1 0 0 0-1 1v6a1 1 0 0 0 1 1h2.416a1.4 1.4 0 0 1 .997.413l3.383 3.384A.705.705 0 0 0 11 19.298z"></path><path d="M16 9a5 5 0 0 1 0 6"></path><path d="M19.364 18.364a9 9 0 0 0 0-12.728"></path></svg>
    </div>
    <audio id="bg-audio" src="/audio.mp3" preload="auto" loop></audio>
  </div>

  <div class="w-full flex flex-col font-infant text-center items-center justify-center py-10 lg:py-10">
    <h1 class="font-alexBrush text-[64px] lg:text-[128px]">Rebeca <span class="text-[24px] lg:text-[64px]">&</span> Jes√∫s</h1>
    <h2 class="mt-10 text-[28px] lg:text-[32px]">20 de Julio de 2026</h2>

  </div>
</header>

<script type="module">
  const toggleBtn = document.getElementById('audio-toggle');
  const playIcon = document.getElementById('play-button');
  const pauseIcon = document.getElementById('pause-button');
  const audio = document.getElementById('bg-audio');

  if (toggleBtn && playIcon && pauseIcon && audio) {
    toggleBtn.addEventListener('click', async () => {
      if (audio.paused) {
        try {
          await audio.play();
          playIcon.classList.add('hidden');
          pauseIcon.classList.remove('hidden');
        } catch (err) {
          console.error('No se pudo reproducir:', err);
        }
      } else {
        audio.pause();
        pauseIcon.classList.add('hidden');
        playIcon.classList.remove('hidden');
      }
    });
  }

</script>
